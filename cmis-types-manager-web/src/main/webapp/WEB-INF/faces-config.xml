<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.MenuRenderer</renderer-type>
            <renderer-class>com.engagepoint.renderer.primefaces.BootStrapSubmenuRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.PanelRenderer</renderer-type>
            <renderer-class>com.engagepoint.renderer.primefaces.BootStrapPanelRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.AccordionPanelRenderer</renderer-type>
            <renderer-class>com.engagepoint.renderer.primefaces.BootStrapAccordionRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.AccordionPanelRenderer</renderer-type>
            <renderer-class>com.engagepoint.renderer.primefaces.BootStrapAccordionRenderer</renderer-class>
        </renderer>
    </render-kit>
    <validator>
        <validator-id>urlValidator</validator-id>
        <validator-class>com.engagepoint.components.UrlValidator</validator-class>
    </validator>

    <lifecycle>
        <phase-listener>com.engagepoint.components.MultiPageMessagesSupport</phase-listener>
    </lifecycle>
</faces-config>